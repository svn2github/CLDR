<web-app>
    <display-name>CLDR Web Applications</display-name>
    <description>Applications used by the CLDR project ( http://www.unicode.org/cldr )</description>
    <servlet>
        <servlet-name>SurveyMain</servlet-name>
        <servlet-class>
            org.unicode.cldr.web.SurveyMain
        </servlet-class>
        <init-param>
            <param-name>cldr.properties</param-name>
            <param-value>../cldr</param-value>
            <description>This is the location of the cldr.properties file. It is assumed to
                be relative to the tomcat 'bin' directory.</description>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyMain</servlet-name>
        <url-pattern>/ost/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

